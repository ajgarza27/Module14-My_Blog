{{#> layout title="Your Dashboard"}}
<main class="p-4">
    <a href="/dashboard/new" class="btn btn-primary mb-4">+ New Post</a>
    {{#each posts}}
    <a href="/dashboard/edit/{{this.id}}" class="card mb-4">
        <div class="card-header">
            <h2 class="card-title">{{this.title}}</h2>
            <small class="text-muted">{{format_date this.createdAt}}</small>
        </div>
        <div class="card-body">
            <p class="card-text">{{this.content}}</p>
        </div>
    </a>
    {{/each}}
</main>
{{/layout}}