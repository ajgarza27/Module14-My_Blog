{{#> layout title="The Tech Blog"}}
<main class="p-4">
    {{#each posts}}
    <a href="/post/{{this.id}}" class="card mb-4">
        <div class="card-header">
            <h2 class="card-title">{{this.title}}</h2>
            <small class="text-muted">Posted by {{this.user.username}} on {{format_date this.createdAt}}</small>
        </div>
        <div class="card-body">
            <p class="card-text">{{this.content}}</p>
        </div>
    </a>
    {{/each}}
</main>
{{/layout}}